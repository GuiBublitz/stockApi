    <div class="sidebar-close">
        <a class="close" href="#close"><i class="lni lni-close"></i></a>
    </div>
    <div class="sidebar-content">
        <div class="sidebar-logo">
            <%- include('logo', {customClass: "text-dark" }) %>
        </div>
        <!-- Sidebar links -->
        <div class="sidebar-menu">
            <ul>
                <li class="nav-item">
                    <a class="page-scroll <%= title === 'Home' ? 'active' : '' %>" href="/">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="page-scroll <%= title === 'Admin - User List' ? 'active' : '' %>" href="/admin/users">
