<style>
    @import url('https://fonts.googleapis.com/css?family=Lato');
  
    .__lock-container h1 {
        margin: 35px 0 20px !important;
        font-size: 34px;
    }

    .__lock-container .lock {
        zoom: 1.2;
        border-radius: 5px;
        width: 55px;
        height: 45px;
        background-color: #333;
        animation: dip 0.9s;
        animation-delay: (0.9s - .5);
        
        &::before,
        &::after {
            content: '';
            position: absolute;
            border-left: 5px solid #333;
            height: 25px;
            width: 25px;
            left: calc(50% - 13px);
        }
        
        &::before {
            top: -30px;
            border: 5px solid #333;
            border-bottom-color: transparent;
            border-radius: 15px 15px 0 0;
            height: 40px;
            animation: lock 0.9s, spin 0.9s;
        }
        
        &::after {
            top: -10px; 
            border-right: 5px solid transparent;
            animation: spin 0.9s;
        }
    }

    @keyframes lock {
        0% {
            top: -45px;
        }
        65% {
            top: -45px;
        }
        100% {
            top: -30px;
        }
    }

    @keyframes spin {
        0% {
            transform: scaleX(-1);
            left: calc(50% - 30px);
        }
        65% {
            transform: scaleX(1);
            left: calc(50% - 12.5px);
        }
    }

    @keyframes dip {
        0% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(10px);
        }
        100% {
            transform: translateY(0px);
        }
    }
    .__lock-container {
        margin-top: 150px;
        width: 100%; 
        height: 100%; 
        position: relative; 
        display: flex !important;
        flex-direction: column !important;
        justify-content: center !important;
        align-items: center !important;
    }
    .__lock-container * {
        position: relative;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

</style>

<div class="__lock-container">
    <div class="lock prevent-select"></div>
    <div class="message prevent-select">
        <h1 
            style="
                margin-top: 25px; 
                color: #232A2C; 
                text-align: center; 
                font-family: sans-serif; 
                font-weight: bold;
            "
        >
            Acesso Negado!
        </h1>
        <p
            style="
                font-size: 18px;
                text-align: center;
            "
        >
            Seu usuário não tem permissão para acessar esse módulo.</br>
        </p>
    </div>
</div>