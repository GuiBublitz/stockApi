<link rel="stylesheet" href="../assets/scss/sign-in-up/sign-in-up-01.css" />

<section class="signin-area signin-one" style="min-height: 100dvh;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5">
        <form method="POST" action="/login">
          <div class="signin-form form-style-two rounded-buttons">
            <div class="d-flex justify-content-start align-items-center">
              <%- include('partials/logo', {customClass: 'text-dark fs-4' }) %> <span class="fs5">| Entrar</span>
            </div>
            
            <div class="row">
              <div class="col-md-12">
                <div class="form-input">
                  <label>Nome de usuário</label>
                  <div class="input-items default">
                    <input type="text" name="username" placeholder="Nome de usuário" required />
                    <i class="lni lni-envelope"></i>
                  </div>
                </div>
                <!-- form input -->
              </div>
              <div class="col-md-12 mb-2">
                <div class="form-input">
                  <label>Senha</label>
                  <div class="input-items default">
                    <input type="password" name="password" placeholder="Senha" required />
                    <i class="lni lni-key"></i>
                  </div>
                </div>
                <!-- form input -->
              </div>
              <div class="col-md-6">
                <div class="form-input rounded-buttons">
                  <button class="btn primary-btn" type="submit">
                    Entrar!
                  </button>
                </div>
                <!-- form input -->
              </div>
              <div class="col-md-6">
                <div class="form-input rounded-buttons">
                  <a href="/register" class="btn btn-outline-dark border border-1 w-100">
                    Cadastre-se
                  </a>
                </div>
                <!-- form input -->
              </div>
              <div class="col-md-12">
                <div class="form-input text-center">
                  <p class="text">
                    Ao entrar, você concorda com os
                    <a href="javascript:void(0)">Termos e Condições</a> e a
                    <a href="javascript:void(0)">Política de Privacidade</a>
                  </p>
                </div>
                <!-- form input -->
              </div>
            </div>
          </div>
          <!-- signin form -->
        </form>
      </div>
    </div>
    <!-- row -->
  </div>
  <!-- container -->
</section>
<!--====== SIGNIN ONE PART ENDS ======-->
